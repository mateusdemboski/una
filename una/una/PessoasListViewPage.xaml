<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="una.PessoasListViewPage">
  <StackLayout>
    <ListView x:Name="ItemListView" ItemTapped="OnItemTapped">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <Label Text="{Binding Nome}" />
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  <Button x:Name="btnVoltar" Text="Voltar ao menu" Clicked="OnBack"></Button>
  </StackLayout>
</ContentPage>